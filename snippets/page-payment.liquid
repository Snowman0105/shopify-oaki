<div class="container">
  <div class="row">
    <div class="col-sm-9 col-xs-12">
      <div class="col-main">
        <div class="static-contain">
          <div class="page-title">
            <h2 class="entry-title">PAYMENT</h2>
          </div>
          <div class="page-content">
            <h5>If you have questions about payment, please fill out form bellow or <a href="mailto:info@oaki.com">email us</a>.</h5>
          </div>
          <div class="gf_browser_chrome gform_wrapper" id="gform_wrapper_2">
            <form method="post" enctype="multipart/form-data" id="gform_2" action="/payment/">
              <div class="gform_heading">
                  <span class="gform_description"></span>
              </div>
              <div class="gform_body">
                <ul id="gform_fields_2" class="gform_fields top_label form_sublabel_below description_below">
                  <li id="field_2_1" class="gfield field_sublabel_below field_description_below gfield_visibility_visible">
                    <label class="gfield_label gfield_label_before_complex" for="input_2_1_3">
                      Name
                    </label>
                    <div class="ginput_complex ginput_container no_prefix has_first_name no_middle_name has_last_name no_suffix gf_name_has_2 ginput_container_name gfield_trigger_change" id="input_2_1">
                      <div class="row">
                        <div class="col-sm-6 col-xs-12">
                          <span id="input_2_1_3_container" class="name_first">
                            <input type="text" name="input_1.3" id="input_2_1_3" value="" aria-label="First name" tabindex="2" aria-invalid="false" class="name_width">
                            <label for="input_2_1_3">First</label>
                          </span>
                        </div>
                        <div class="col-sm-6 col-xs-12">
                          <span id="input_2_1_6_container" class="name_last">
                            <input type="text" name="input_1.6" id="input_2_1_6" value="" aria-label="Last name" tabindex="4" aria-invalid="false" class="name_width">
                            <label for="input_2_1_6">Last</label>
                          </span>
                        </div>
                      </div>
                    </div>
                  </li>
                  <li id="field_2_2" class="gfield gfield_contains_required field_sublabel_below field_description_below gfield_visibility_visible">
                    <label class="gfield_label" for="input_2_2">
                      Email
                      <span class="gfield_required">*</span>
                    </label>
                    <div class="ginput_container ginput_container_email">
                      <input name="input_2" id="input_2_2" type="text" value="" class="medium" tabindex="6" aria-required="true" aria-invalid="false" required>
                    </div>
                  </li>
                  <li id="field_2_3" class="gfield gfield_contains_required field_sublabel_below field_description_below gfield_visibility_visible">
                    <label class="gfield_label" for="input_2_3">
                      Message<span class="gfield_required">*</span>
                    </label>
                    <div class="ginput_container ginput_container_textarea">
                      <textarea name="input_3" id="input_2_3" class="textarea name_width" tabindex="7" aria-required="true" aria-invalid="false" rows="10" cols="50" required></textarea>
                    </div>
                  </li>
                </ul>
              </div>
              <div class="gform_footer top_label">
                <input type="submit" id="gform_submit_button_6" class="gform_button button" value="Submit">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-3 col-xs-12">
      {% include 'footer-menu-list'%}
    </div>
  </div>
</div>
